@page
@model FrontEnd.Pages.Sites.IndexModel
<br />
<br />
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-9">
            <h2 class="text-primary">Site List</h2>
        </div>
        <div class="col-3">
            <a asp-page="Create" class="btn btn-primary">
                <i class="bi bi-plus-square"></i> &nbsp;Create New Site
            </a>
        </div>
    </div>
    <br />
    <br />
    <table class="table table-bordered table-striped" style="width: 100%">
        <thead>
            <tr>
                <th>Name</th>
                <th>Address</th>
                <th>Schedule Days</th>
                <th>Schedule Hours</th>
                <th>Phone</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var obj in Model.Sites)
            {
                <tr>
                    <td width="10%">@obj.Name</td>
                    <td width="30%">@obj.Address</td>
                    <td width="15%">@obj.ScheduleDay</td>
                    <td width="15%">@obj.ScheduleHour</td>
                    <td width="15%">@obj.Phone</td>
                    <td widht="15%">
                        <div class=" btn-group" role="group">
                            <a asp-page="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <a asp-page="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash-fill"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }            
        </tbody>
    </table>
</div>