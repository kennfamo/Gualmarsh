@page
@model FrontEnd.Pages.ProductCategories.IndexModel

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Product Category List</h2>
        </div>
        <div class="col-6">
            <a asp-page="Create" class="btn btn-primary">
                Create New Product Category
            </a>
        </div>
    </div>
    <br />
    <br />
    <table class="table table-bordered table-striped" style="width: 100%">
        <thead>
            <tr>
                <th>Category Name</th>
                <th>Created Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var obj in Model.ProductCategories)
            {
                <tr>
                    <td width="50%">@obj.Name</td>
                    <td width="30%">@obj.CreatedDate</td>
                </tr>
            }            
        </tbody>
    </table>
</div>