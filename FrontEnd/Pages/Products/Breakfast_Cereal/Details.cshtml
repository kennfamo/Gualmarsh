@page
@model FrontEnd.Pages.Products.Breakfast_Cereal.DetailsModel
<div class="row">
    <div class="col-12">
	    <div class="page-title-box d-sm-flex align-items-center justify-content-between">
		    <h4 class="mb-sm-0">{{title}}</h4>
		    <div class="page-title-right">
			    <ol class="breadcrumb m-0">
				    <li class="breadcrumb-item"><a href="javascript: void(0);">{{pageview}}</a>
				    </li>
				    <li class="breadcrumb-item active">{{title}}</li>
			    </ol>
		    </div>
	    </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-xl-2"></div>
                    <div class="col-xl-5">
                        <div class="product-detail">
