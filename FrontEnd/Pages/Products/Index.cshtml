@page "/products/{name}"
@model FrontEnd.Pages.Products.IndexModel
@{
    ViewData["Title"] = "Products";
    double minPrice = 0;
    double maxPrice = 0;
}
@section Styles {
     <partial name="_ProductStylesPartial"/>;
     
    
}
<div class="row">
<div class="col-xl-3 col-lg-4">
    <div class="card">
        <div class="card-body">
            <h5 class="font-size-14 mb-3">Categories</h5>
            <div class="accordion ecommerce" id="accordion">
                    <div>
                        <h5 class="accordion-header font-size-14" id="headingOne">
                                <i class="mdi mdi-desktop-classic font-size-16 align-middle me-2"></i> @Model.ProductSubcategory.ProductCategory.Name
                        </h5>
                        <div>
                            <div class="accordion-body">
                                <ul class="list-unstyled categories-list mb-0">
                                @foreach (var item in Model.ProductSubcategoryList)
                                {
                                    var route = item.Name.Replace('-', ' ');
                                    <li><a asp-route-name="@item.Name" asp-page="/Products/Index"><i class="mdi mdi-circle-medium me-1"></i> @route</a></li>
                                }
                            </ul>
                        </div>
                        </div>
                    </div>
            </div>
        </div>
        <div class="card-body border-top">
            <div>
                <h5 class="font-size-14 mb-4">Price</h5>

                <input type="text" id="pricerange">
            </div>
        </div>

        <div class="custom-accordion">
            <div class="card-body border-top">
                <div>
                    <h5 class="font-size-14 mb-0"><a href="#collapseExample1" class="text-dark d-block" data-bs-toggle="collapse" >Descuento <i class="mdi mdi-minus float-end accor-plus-icon"></i></a></h5>

                    <div class="collapse show" id="collapseExample1">
    
                        <div class="mt-4">
                            <div class="form-check mt-2">
                                <input type="radio" id="productdiscountRadio6" name="productdiscountRadio1" class="form-check-input">
                                <label class="form-check-label" for="productdiscountRadio6">50% o más</label>
                            </div>
                            <div class="form-check mt-2">
                                <input type="radio" id="productdiscountRadio5" name="productdiscountRadio1" class="form-check-input">
                                <label class="form-check-label" for="productdiscountRadio5">40% o más</label>
                            </div>
                            <div class="form-check mt-2">
                                <input type="radio" id="productdiscountRadio4" name="productdiscountRadio1" class="form-check-input">
                                <label class="form-check-label" for="productdiscountRadio4">30% o más</label>
                            </div>
                            <div class="form-check mt-2">
                                <input type="radio" id="productdiscountRadio3" name="productdiscountRadio1" class="form-check-input">
                                <label class="form-check-label" for="productdiscountRadio3">20% o más</label>
                            </div>
                            <div class="form-check mt-2">
                                <input type="radio" id="productdiscountRadio2" name="productdiscountRadio1" class="form-check-input">
                                <label class="form-check-label" for="productdiscountRadio2">10% o más</label>
                            </div>
                            <div class="form-check mt-2">
                                <input type="radio" id="productdiscountRadio1" name="productdiscountRadio1" class="form-check-input">
                                <label class="form-check-label" for="productdiscountRadio1">Menos de 10%</label>
                            </div>
                        </div>
    
                    </div>
                </div>
            </div>
            <div class="card-body border-top">
                <div>
                    <h5 class="font-size-14 mb-0"><a href="#collapseExample2" class="text-dark d-block" data-bs-toggle="collapse">Rating <i class="mdi mdi-minus float-end accor-plus-icon"></i></a></h5>
                    <div class="collapse show" id="collapseExample2">
                        <div class="mt-4">
                                <div class="form-check mt-2" >
                                    <input type="radio" id="productRatingRadio1" name="productRatingRadio1" class="form-check-input">
                                    <label class="form-check-label" for="productRatingRadio1">4 <i class="mdi mdi-star text-warning"></i>  or more</label>
                                    <button id="clearLink" hidden class="float-end bg-white btn" style="background-color:transparent"><strong><u>Clear</u></strong></button>
                            </div>
                            <div class="form-check mt-2">
                                    <input type="radio" id="productRatingRadio2" name="productRatingRadio1" class="form-check-input">
                                    <label class="form-check-label" for="productRatingRadio2">3 <i class="mdi mdi-star text-warning"></i>  or more</label>
                            </div>
                            <div class="form-check mt-2">
                                    <input type="radio" id="productRatingRadio3" name="productRatingRadio1" class="form-check-input">
                                    <label class="form-check-label" for="productRatingRadio3">2 <i class="mdi mdi-star text-warning"></i>  or more</label>
                            </div>
                            <div class="form-check mt-2">
                                    <input type="radio" id="productRatingRadio4" name="productRatingRadio1" class="form-check-input">
                                    <label class="form-check-label" for="productRatingRadio4">1 <i class="mdi mdi-star text-warning"></i> or more</label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="col-lg-9">
    <div class="card">
        <div class="card-body">
            <div>
                <div class="row">
                    <div class="col-md-6">
                        <div>
                            @{
                                    var routeName = Model.ProductSubcategory.Name.Replace('-', ' ');
                            }
                                <h5 style="display: inline">@Model.ProductSubcategory.ProductCategory.Name</h5>
                                <h5 style="display: inline"> -> @routeName</h5>                                                 
                        </div>
                    </div>                                      
                </div>

                <ul class="list-inline my-3 ecommerce-sortby-list">
                    <li class="list-inline-item"><span class="fw-medium font-family-secondary">Order By:</span></li>
                    <li class="list-inline-item active"><a href="#">Popularity</a></li>
                    <li class="list-inline-item"><a href="#">Recent</a></li>
                </ul>
                <div class="row g-0">
                    @foreach(var product in Model.ProductList)
                    {
                        int ratingTotal = 0;
                        <div class="col-xl-4">
                            <a asp-page="Details" asp-route-name="@product.ShortName" asp-route-id="@product.Id">
                                <div class="product-box">
                                    <div class="product-img">
                                        <img src="@product.Image1" alt="img-5" class="img-fluid mx-auto d-block">
                                    </div>
                                    <br>
                                    <div class="text-center mt-2">
                                        
                                        <p class="font-size-14 mb-1">@product.Brand</p>
                                        <h5 class="font-size-14 text-dark">@product.Name</h5>
                                        @foreach(var review in Model.ReviewList.Where(u=>u.ProductId == product.Id))
                                        {
                                            ratingTotal += review.Rating;
                                        }
                                        @if (Model.ReviewList.Where(u=>u.ProductId == product.Id).Count() > 0)
                                        {
                                             int ratingAverage = ratingTotal / Model.ReviewList.Where(u => u.ProductId == product.Id).Count();
                                            <span class="mdi mdi-star @if(ratingAverage > 0){<text>text-warning</text>}else{<text>text-muted</text>}"></span>
                                            <span class="mdi mdi-star @if(ratingAverage > 1){<text>text-warning</text>}else{<text>text-muted</text>}"></span>
                                            <span class="mdi mdi-star @if(ratingAverage > 2){<text>text-warning</text>}else{<text>text-muted</text>}"></span>
                                            <span class="mdi mdi-star @if(ratingAverage > 3){<text>text-warning</text>}else{<text>text-muted</text>}"></span>
                                            <span class="mdi mdi-star @if(ratingAverage > 4){<text>text-warning</text>}else{<text>text-muted</text>}"> </span>
                                            <span class="text-muted">(@Model.ReviewList.Where(u => u.ProductId == product.Id).Count())</span>
                                        }
                                        <h5 class="mt-3 mb-0">₡@product.Price</h5>
                                    </div>
                                </div>
                            </a>
                        </div>
                    }
                    @if (Model.FilteredMaxPrice != 0)
                    {
                        <input type="hidden" id="filteredMaxPrice" value="@Model.FilteredMaxPrice" />
                    }
                    else{
                        <input type="hidden" id="filteredMaxPrice" value="@Model.MaxPrice" />
                    }
                    <input type="hidden" id="filteredMinPrice" value="@Model.FilteredMinPrice" />
                    <input type="hidden" id="maxPrice" value="@Model.MaxPrice" />
                    <input type="hidden" id="filteredRating" value="@Model.FilteredRating" />
                </div>
                <div class="row mt-4">
                    <div class="col-sm-6">
                    </div>
                    <div class="col-sm-6">
                        <div class="float-sm-end">
                            <ul class="pagination pagination-rounded mb-sm-0">
                                <li class="page-item">
                                    <a href="#" class="page-link"><i class="mdi mdi-chevron-left"></i></a>
                                </li>
                                @for (var i = 1; i <= Model.TotalPages; i++ )
                                    {
                                        <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                                            <a asp-page="/products/index" asp-route-pageIndex="@i" class="page-link">@i</a>
                                        </li>
                                    }

                                <li class="page-item">
                                    <a href="#" class="page-link"><i class="mdi mdi-chevron-end"></i></a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
@section Scripts{
    @{
    <partial name="_ProductScriptsPartial"/>
    }
}
