@page
@model FrontEnd.Pages.Cities.IndexModel

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-9">
            <h2 class="text-primary">City List</h2>
        </div>
        <!--<div class="col-3">
            <a asp-page="Create" class="btn btn-primary">
                <i class="bi bi-plus-square"></i> &nbsp;Create New Product Category
            </a>
        </div>-->
    </div>
    <br />
    <br />
    <table class="table table-bordered table-striped" style="width: 100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Canton</th>
                <th>Postal Code</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var obj in Model.Cities)
            {
                <tr>
                    <td width="10%">@obj.Id</td>
                    <td width="35%">@obj.Name</td>
                    <td width="35%">@obj.Canton.Name</td>
                    <td width="20%">@obj.PostalCode</td>
                </tr>
            }            
        </tbody>
    </table>
</div>