@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
<br>
<br>				
<div class="row">
    <div class="col-lg-12">
        <div class="row">                                        
            <div class="col-xl-2"></div>
            <div class="col-xl-8">                                         
                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">                            
                <div class="row">
                    <div class="col-xl-3"></div>
                    <div class="col-xl-6">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
						<div class="justify-center flex">
							<img src="~/images/logo-sm-light.png" alt="logo-sm" >                                                           
						</div>													
						<div class="justify-center flex mt-3">
							<h5 class="font-size-24 fw-bold">Create a Gualmarsh account</h5>                                                            
						</div>
						<div class="row mb-3 mt-3">
							<div class="col-sm-2"></div>
							<div class="col-sm-8">
								<label asp-for="Input.FirstName" class="form-label"></label>
								<input asp-for="Input.FirstName" class="form-control form-control-lg" type="text" aria-required="true"/>
                                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
							</div>
						</div>
						<div class="row mb-3 mt-3">
							<div class="col-sm-2"></div>
							<div class="col-sm-8">
								<label asp-for="Input.LastName" class="form-label"></label>
								<input asp-for="Input.LastName" class="form-control form-control-lg" type="text" aria-required="true"/>
                                <span asp-validation-for="Input.LastName" class="text-danger"></span>
							</div>
						</div>													
						<div class="row mb-3 mt-3">
							<div class="col-sm-2"></div>
							<div class="col-sm-8">
								<label asp-for="Input.Email" class="form-label"></label>
								<input asp-for="Input.Email" class="form-control form-control-lg" type="text" autocomplete="username" aria-required="true"/>
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
							</div>
						</div>
                        <div class="row mb-3">
							<div class="col-sm-2"></div>
							<div class="col-sm-8">
                                <label asp-for="Input.PhoneNumber"></label>
								<input asp-for="Input.PhoneNumber" class="form-control" aria-required="true" />                                
                                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
							</div>
						</div> 
						<div class="row mb-3">
							<div class="col-sm-2"></div>
							<div class="col-sm-8">
								<label asp-for="Input.Password" class="form-label"></label>
								<input asp-for="Input.Password" class="form-control form-control-lg" type="password" autocomplete="new-password" aria-required="true"/>
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
							</div>
						</div> 
                        <div class="row mb-3">
							<div class="col-sm-2"></div>
							<div class="col-sm-8">
                                <label asp-for="Input.ConfirmPassword"></label>
								<input asp-for="Input.ConfirmPassword" class="form-control form-control-lg" type="password" autocomplete="new-password" aria-required="true" />
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
							</div>
						</div> 
                        <div class="justify-center flex">
                            <button id="registerSubmit" type="submit" class="btn btn-lg btn-primary waves-effect waves-light mt-3">Create Account</button>                                                        
                        </div>
                        <div class="justify-center flex mt-3">
							<span>Already have an account? &nbsp;</span>
                            <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="text-decoration-underline">Sign In</a>                                                       
                        </div>
                    </div>
                    <div class="col-xl-3"></div>
                </div>
                </form>                                                    
            </div>                                                                                                                   
            <div class="col-xl-2"></div>
        </div>                                                           
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
