@page
@model FrontEnd.Pages.Products.EditModel

<form method="post">
    <input hidden asp-for="Product.Id" />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pl-3">Edit Product</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Product.Name"></label>
            <input asp-for="Product.Name" class="form-control"/>
        </div>
        <div class="mb-3">
            <label asp-for="Product.ShortName"></label>
            <input asp-for="Product.ShortName" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Product.Description"></label>
            <input asp-for="Product.Description" class="form-control"/>
        </div>
        <div class="mb-3">
            <label asp-for="Product.SKU"></label>
            <input asp-for="Product.SKU" class="form-control"/>
        </div>
        <div class="mb-3">
            <label asp-for="Product.Brand"></label>
            <input asp-for="Product.Brand" class="form-control"/>
        </div>
        <div class="mb-3">
            <label asp-for="Product.Weight"></label>
            <input asp-for="Product.Weight" class="form-control"/>
        </div>
        <div class="mb-3">
            <label asp-for="Product.ContainerType"></label>
            <input asp-for="Product.ContainerType" class="form-control"/>
        </div>
        <div class="mb-3">
            <label asp-for="Product.Inventory"></label>
            <input asp-for="Product.Inventory" class="form-control"/>
        </div>
        <div class="mb-3">
            <label asp-for="Product.Price"></label>
            <input asp-for="Product.Price" class="form-control"/>
        </div>
        <div class="mb-3">
            <label asp-for="Product.ProductSubcategoryId"></label>
            <select asp-for="Product.ProductSubcategoryId" asp-items="Model.ProductSubcategoryList" class="form-select">
                <option disabled selected>--Select Product Subcategory--</option>
            </select>
        </div>
        <div class="mb-3">
            <label asp-for="Product.DiscountCode"></label>
            <select asp-for="Product.DiscountCode" asp-items="Model.DiscountList" class="form-select">
                <option disabled selected>--Select Product Discount--</option>
            </select>
        </div>
        <div class="mb-3">
            <label asp-for="Product.Image1"></label>
            <input asp-for="Product.Image1" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Product.Image2"></label>
            <input asp-for="Product.Image2" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Product.Image3"></label>
            <input asp-for="Product.Image3" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Product.Image4"></label>
            <input asp-for="Product.Image4" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Save</button>
        <a asp-page="List" class="btn btn-secondary" style="width:150px">Back To List</a>
    </div>
</form>
