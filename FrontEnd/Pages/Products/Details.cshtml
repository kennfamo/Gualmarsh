@page "/Products/{name}/{id}"
@model FrontEnd.Pages.Products.DetailsModel
@{
    ViewData["Title"] = Model.ShoppingCart.Product.Name;
}
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-xl-2"></div>
                    <div class="col-xl-5">
                        <div class="product-detail">
                            <div class="row">
                                <div class="col-3">
                                    <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">                                        
                                        <a class="nav-link active" id="product-1-tab" data-bs-toggle="pill" href="#product-1" role="tab">
                                            <img src="@Model.ShoppingCart.Product.Image1" class="img-fluid mx-auto d-block tab-img rounded">
                                        </a>
                                        <a class="nav-link" id="product-2-tab" data-bs-toggle="pill" href="#product-2" role="tab">
                                            <img src="@Model.ShoppingCart.Product.Image2"  class="img-fluid mx-auto d-block tab-img rounded">
                                        </a>
                                        <a class="nav-link" id="product-3-tab" data-bs-toggle="pill" href="#product-3" role="tab">
                                            <img src="@Model.ShoppingCart.Product.Image3"  class="img-fluid mx-auto d-block tab-img rounded">
                                        </a>
                                        <a class="nav-link" id="product-4-tab" data-bs-toggle="pill" href="#product-4" role="tab">
                                            <img src="@Model.ShoppingCart.Product.Image4"  class="img-fluid mx-auto d-block tab-img rounded">
                                        </a>
                                    </div>
                                </div>
                                <div class="col-md-8 col-9">
                                    <div class="tab-content" id="v-pills-tabContent">
                                        <div class="tab-pane fade show active" id="product-1" role="tabpanel">
                                            <div class="product-img">
                                                <img src="@Model.ShoppingCart.Product.Image1" class="img-fluid mx-auto d-block" >
                                            </div>
                                        </div>
                                        <div class="tab-pane fade" id="product-2" role="tabpanel">
                                            <div class="product-img">
                                                <img src="@Model.ShoppingCart.Product.Image2" class="img-fluid mx-auto d-block">
                                            </div>
                                        </div>
                                        <div class="tab-pane fade" id="product-3" role="tabpanel">
                                            <div class="product-img">
                                                <img src="@Model.ShoppingCart.Product.Image3" class="img-fluid mx-auto d-block">
                                            </div>
                                        </div>
                                        <div class="tab-pane fade" id="product-4" role="tabpanel">
                                            <div class="product-img">
                                                <img src="@Model.ShoppingCart.Product.Image4" class="img-fluid mx-auto d-block">
                                            </div>
                                        </div>
                                    </div>   
                                        <form method="post">
                                        <input asp-for="ShoppingCart.ProductId" hidden />
                                        <input asp-for="ShoppingCart.ApplicationUserId" hidden value="0"/>
                                        <div class="row text-center mt-2">
                                            <div class="col-sm-3"></div>
                                            <div class="col-sm-6">
                                                <div class="d-grid">
                                                    <button type="submit" class="btn btn-primary waves-effect waves-light mt-2">
                                                    <i class="mdi mdi-cart me-2"></i> Add to cart
                                                </button>
                                                </div>
                                            </div>                                        
                                        </div>
                                    </form>                     
                                </div>
                            </div>
                        </div>
                        <!-- end product img -->
                    </div>
                    <div class="col-xl-3">
                        <div class="mt-4 mt-xl-3">
                            <a href="#" class="text-primary">@Model.ShoppingCart.Product.ProductSubcategory.ProductCategory.Name</a>
                            <h5 class="mt-1 mb-3">@Model.ShoppingCart.Product.Name</h5>

                            <div class="d-inline-flex">
                                <div class="text-muted me-3">
                                     <span class="mdi mdi-star @if(Model.RatingAverage >0){
                                        <text>text-warning</text>
                                    }"></span>
                                    <span class="mdi mdi-star @if(Model.RatingAverage >1){
                                        <text>text-warning</text>
                                    }"></span>
                                    <span class="mdi mdi-star @if(Model.RatingAverage >2){
                                        <text>text-warning</text>
                                    }"></span>
                                    <span class="mdi mdi-star @if(Model.RatingAverage >3){
                                        <text>text-warning</text>
                                    }"></span>
                                    <span class="mdi mdi-star @if(Model.RatingAverage >4){
                                        <text>text-warning</text>
                                    }"></span>
                                </div>
                                
                            </div>
                                                
                            <h5 class="mt-2">₡@Model.ShoppingCart.Product.Price</h5>
                            <hr class="my-4">

                            <div class="row">
                                <div class="col-md-6">
                                    <div>                                                           

                                        <h5 class="font-size-14">Specification :</h5>
                                        <ul class="list-unstyled product-desc-list">
                                            <li><i class="mdi mdi-circle-medium me-1 align-middle"></i> @Model.ShoppingCart.Product.Brand</li>
                                            <li><i class="mdi mdi-circle-medium me-1 align-middle"></i> @Model.ShoppingCart.Product.ProductSubcategory.ProductCategory.Name</li>
                                            <li><i class="mdi mdi-circle-medium me-1 align-middle"></i> @Model.ShoppingCart.Product.ContainerType</li>
                                            <li><i class="mdi mdi-circle-medium me-1 align-middle"></i> @Model.ShoppingCart.Product.Weight</li>
                                        </ul>
                                                              
                                    </div>
                                </div>
                            </div>                                               
                                                
                        </div>
                    </div>
                    <div class="col-xl-2"></div>
                </div>
                <!-- end row -->
                <div class="row">
                    <div class="col-xl-2"></div>
                    <div class="col-xl-8">
                        <div class="mt-4">
                            <h5 class="font-size-14 mb-3">Product description: </h5>
                            <div class="product-desc">
                                <ul class="nav nav-tabs nav-tabs-custom" role="tablist">
                                    <li class="nav-item">
                                        <a class="nav-link active" id="desc-tab" data-bs-toggle="tab" href="#desc" role="tab">Description</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" id="specifi-tab" data-bs-toggle="tab" href="#specifi" role="tab">Specifications</a>
                                    </li>
                                </ul>
                                <div class="tab-content border border-top-0 p-4">
                                    <div class="tab-pane fade show active" id="desc" role="tabpanel">
                                        <div>
                                            <p>@Html.Raw(Model.ShoppingCart.Product.Description)</p>
                                        </div>
                                    </div>
                                    <div class="tab-pane fade" id="specifi" role="tabpanel">
                                        <div class="table-responsive">
                                            <table class="table table-nowrap mb-0">
                                                <tbody>
                                                    <tr>
                                                        <th scope="row" style="width: 400px;">Category</th>
                                                        <td>@Model.ShoppingCart.Product.ProductSubcategory.ProductCategory.Name</td>
                                                    </tr>
                                                    <tr>
                                                        <th scope="row">Brand</th>
                                                        <td>@Model.ShoppingCart.Product.Brand</td>
                                                    </tr>
                                                    <tr>
                                                        <th scope="row">Container Type</th>
                                                        <td>@Model.ShoppingCart.Product.ContainerType</td>
                                                    </tr>
                                                    <tr>
                                                        <th scope="row">SKU</th>
                                                        <td>@Model.ShoppingCart.Product.SKU</td>
                                                    </tr>
                                                    <tr>
                                                        <th scope="row">Weight</th>
                                                        <td>@Model.ShoppingCart.Product.Weight</td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="mt-4">
                            <h5 class="font-size-14">Reviews : </h5>
                            
                            
                            <div class="d-inline-flex mb-3">
                                <div class="text-muted me-3">
                                    <span class="mdi mdi-star @if(Model.RatingAverage >0){ <text>text-warning</text>}"></span>
                                    <span class="mdi mdi-star @if(Model.RatingAverage >1){ <text>text-warning</text>}"></span>
                                    <span class="mdi mdi-star @if(Model.RatingAverage >2){ <text>text-warning</text>}"></span>
                                    <span class="mdi mdi-star @if(Model.RatingAverage >3){ <text>text-warning</text>}"></span>
                                    <span class="mdi mdi-star @if(Model.RatingAverage >4){ <text>text-warning</text>}"></span>
                                </div>
                                <div class="text-muted">(@if (Model.ReviewList.Count() == 1)
                                    {
                                        <text>1 Review</text>

                                    }else{
                                        <text>@Model.ReviewList.Count() Reviews</text>
                                    })
                                </div>
                            </div>
                            @if (Model.ReviewList.Count() > 0)
                            {
                                <a asp-page="Reviews" asp-route-id="@Model.ShoppingCart.ProductId" class="float-end">View All Reviews</a>
                                <div class="border p-4 rounded">
                                @foreach (var item in Model.ReviewList)
                                {
                                    int ratingInt = Int32.Parse(item.Rating);
                                    <div class="d-flex border-bottom pb-3">
                                        <div class="flex-1">
                                            <div class="d-inline-flex mb-3">
                                                <div class="text-muted me-3">
                                                    <span class="mdi mdi-star @if(ratingInt >0){ <text>text-warning</text>}"></span>
                                                    <span class="mdi mdi-star @if(ratingInt >1){ <text>text-warning</text>}"></span>
                                                    <span class="mdi mdi-star @if(ratingInt >2){ <text>text-warning</text>}"></span>
                                                    <span class="mdi mdi-star @if(ratingInt >3){ <text>text-warning</text>}"></span>
                                                    <span class="mdi mdi-star @if(ratingInt >4){ <text>text-warning</text>}"></span>
                                                </div>
                                            </div>
                                            <h5 class="font-size-17 mb-3">@item.Title</h5>
                                            <p class="text-muted mb-2">@item.Body</p>
                                            <br>
                                            <h5 class="font-size-14 mb-3 fst-italic">@item.ApplicationUser.FirstName @item.ApplicationUser.LastName</h5>                                                            
                                            <ul class="list-inline product-review-link mb-0">
                                                <li class="list-inline-item">
                                                    @if (Model.HelpfulReviewList != null)
                                                    {
                                                        if (Model.HelpfulReviewList.Where(u => u.ReviewId == item.Id).Count() > 0)
                                                        {
                                                            <p>@Model.HelpfulReviewList.Where(u=> u.ReviewId == item.Id).Count() people found this helpful</p>
                                                        }
                                                        if (Model.HelpfulReviewListUser != null){
                                                            if (Model.HelpfulReviewListUser.Where(u => u.ReviewId == item.Id).Count() > 0)
                                                            {
                                                                <a asp-page-handler="unhelpful" asp-route-id="@item.Id" asp-route-product="@item.ProductId" class="text-primary"><i class="mdi mdi-thumb-up text-primary align-middle me-1"></i> Helpful</a>
                                                            }
                                                            else
                                                            {
                                                                <a asp-page-handler="helpful" asp-route-id="@item.Id" asp-route-product="@item.ProductId"><i class="mdi mdi-thumb-up align-middle me-1"></i> Helpful</a>
                                                            }
                                                        }
                                                    }
                                                </li>
                                            </ul>
                                        </div>
                                        <p class="float-sm-end font-size-12">@item.CreatedDate</p>
                                    </div> 
                            }
                                @*<div class="d-flex border-bottom py-3">
                                    <div class="flex-1">
                                        <p class="text-muted mb-2">Everyone realizes why a new common language would be desirable</p>
                                        <h5 class="font-size-15 mb-3">David</h5>
        
                                        <ul class="list-inline product-review-link mb-0">
                                            <li class="list-inline-item">
                                                <a href="#"><i class="mdi mdi-thumb-up align-middle me-1"></i> Like</a>
                                            </li>
                                            <li class="list-inline-item">
                                                <a href="#"><i class="mdi mdi-message-text align-middle me-1"></i> Comment</a>
                                            </li>
                                        </ul>
                                    </div>
                                    <p class="float-sm-end font-size-12">22 Jan, 2020</p>
                                </div>
                                <div class="d-flex py-3">
                                    <div class="flex-1">
                                        <p class="text-muted mb-2">If several languages coalesce, the grammar of the resulting </p>
                                        <h5 class="font-size-15 mb-3">Scott</h5>
        
                                        <ul class="list-inline product-review-link mb-0">
                                            <li class="list-inline-item">
                                                <a href="#"><i class="mdi mdi-thumb-up align-middle me-1"></i> Like</a>
                                            </li>
                                            <li class="list-inline-item">
                                                <a href="#"><i class="mdi mdi-message-text align-middle me-1"></i> Comment</a>
                                            </li>
                                        </ul>
                                    </div>
                                    <p class="float-sm-end font-size-12">04 Jan, 2020</p>
                                </div>*@
                                </div>
                            }
                        </div>
                    </div>
                    <div class="col-xl-2"></div>
                </div>                                    
            </div>
        </div>
        <!-- end card -->
    </div>
</div>
