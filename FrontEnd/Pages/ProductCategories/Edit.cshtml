<form method="post">
    <input hidden asp-for="ProductCategory.Id" />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pl-3">Edit Product Category</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="ProductCategory.Name"></label>
            <input asp-for="ProductCategory.Name" class="form-control"/>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Save</button>
